<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<p><%= @task.completed == true ? "This task is completed"  : "This task is not completed yet" %></p>

<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to 'Edit this task', edit_task_path(@task) %></p>
<%confirmation = "Delete #{@task.title}?" %>
<p><%= link_to 'Destroy task', task_path(@task), method: :delete, data: { confirm: confirmation } %></p>